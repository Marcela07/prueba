@model WebApplication5.Models.Profesor

<div class="row">
    <h1>Mantenedor Profesor</h1>
   
   
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for="rut">Rut:</label>
            <div class="col-sm-6">
                
                @Html.TextBoxFor(m => m.rut, null, new { @class = "form-control", @placeholder = "Ingrese su rut" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="nombre">Nombre Completo:</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.nombre, null, new { @class = "form-control", @placeholder = "Ingrese su nombre  completo" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="apellido">Titulo:</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.titulo, null, new { @class = "form-control", @placeholder = "Ingrese su titulo" })
            </div>
        </div>
        
       
        <div class="form-group">
            <label class="control-label col-sm-2" for="ciudad">Grado Profesional:</label>
            <div class="col-sm-6">
                @Html.DropDownListFor(m => m.grado, new List<SelectListItem>
                    {
                        new SelectListItem{Text="Ingeniero", Value="Ingeniero"},
                        new SelectListItem{Text="Tecnico", Value="Tecnico"},
                        new SelectListItem{Text="Doctor", Value="Doctor"},
                    
                    },
                    new { @class = "form-control" }
                    )

            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-1">
                <button type="reset" class="btn btn-info">Limpiar</button>
            </div>
            <div class="col-sm-offset-1 col-sm-1">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    }
</div>
